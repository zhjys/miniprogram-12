.page { background:#fff; }
.header .title { font-size:34rpx; font-weight:bold; margin-bottom:10rpx; }
.artisan-item { display:flex; padding:12rpx; border-bottom:1rpx solid #eee; }
.artisan-image { width:180rpx; height:120rpx; border-radius:6rpx; margin-right:12rpx; }
.artisan-body { flex:1; }
.artisan-name { font-size:30rpx; font-weight:bold; display:block; margin-bottom:6rpx; }
.artisan-skill { font-size:24rpx; color:#888; display:block; margin-bottom:6rpx; }
.artisan-summary { font-size:26rpx; color:#666; display:block; line-height:34rpx; max-height:68rpx; overflow:hidden; }

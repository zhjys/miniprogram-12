.page { background:#fff; }
.header .title { font-size:34rpx; font-weight:bold; margin-bottom:10rpx; display:block; }
.news-item { display:flex; padding:12rpx; border-bottom:1rpx solid #eee; }
.news-image { width:200rpx; height:120rpx; border-radius:6rpx; margin-right:12rpx; }
.news-body { flex:1; }
.news-title { font-size:30rpx; font-weight:bold; display:block; margin-bottom:6rpx; }
.news-date { font-size:22rpx; color:#999; display:block; margin-bottom:8rpx; }
.news-summary { font-size:26rpx; color:#666; display:block; line-height:34rpx; max-height:68rpx; overflow:hidden; }

.profile-container {
  padding: 30rpx;
  text-align: center;
}

.profile-header {
  margin-top: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 34rpx;
  font-weight: bold;
}

.bio {
  margin-top: 10rpx;
  color: #666;
  font-size: 28rpx;
}

.menu {
  margin-top: 40rpx;
}

.menu-btn {
  width: 80%;
  margin: 15rpx auto;
  padding: 20rpx 0;
  font-size: 30rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

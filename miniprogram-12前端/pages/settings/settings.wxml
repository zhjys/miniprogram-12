<view class="page" style="padding:20rpx;">
  <text style="font-size:30rpx;font-weight:bold;">系统设置</text>

  <view style="margin-top:20rpx;">
    <view style="display:flex; justify-content:space-between; align-items:center; padding:12rpx 0; border-bottom:1rpx solid #eee;">
      <text>消息提醒</text>
      <switch checked="{{enableNotify}}" bindchange="onToggleNotify" />
    </view>

    <view style="display:flex; justify-content:space-between; align-items:center; padding:12rpx 0; border-bottom:1rpx solid #eee;">
      <text>清除缓存</text>
      <button bindtap="clearCache">清除</button>
    </view>

    <view style="display:flex; justify-content:space-between; align-items:center; padding:12rpx 0; border-bottom:1rpx solid #eee;">
      <text>修改昵称</text>
      <button bindtap="changeNickname">修改</button>
    </view>

    <view style="display:flex; justify-content:space-between; align-items:center; padding:12rpx 0;">
      <text>退出登录（清除本地用户数据）</text>
      <button bindtap="logout" type="warn">退出</button>
    </view>
  </view>

  <view style="margin-top:30rpx; color:#999;">
    <text>关于：这是示例小程序设置页面。版本 1.0</text>
  </view>
</view>

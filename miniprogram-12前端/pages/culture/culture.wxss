/* 整体页面 */
.page {
  height: 100%;
  background: #faf8f5; /* 宣纸浅米色 */
  display: flex;
  font-family: STKaiti, KaiTi, serif;
}

/* 左侧分类栏 */
.category-left {
  width: 25%;
  background: #f2efe7; /* 宣纸灰色 */
  border-right: 1rpx solid #d6d3c4;
  height: 100%;
}

.category-item {
  padding: 24rpx 16rpx;
  border-bottom: 1rpx solid #e2dfd6;
  font-size: 28rpx;
  color: #333;
}

.category-item.active {
  background: #e6ddc8; /* 木纹浅棕选中效果 */
  border-left: 6rpx solid #b4884a; /* 墨色边条 */
  font-weight: bold;
  color: #573d1c;
}

/* 右侧内容区 */
.content-right {
  width: 75%;
  padding: 16rpx;
  overflow-y: scroll;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  margin-bottom: 24rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.08);
  transition: transform 0.2s;
}

.card:active {
  transform: scale(0.97);
}

/* 图片 */
.card image {
  width: 100%;
  height: 220rpx;
  border-radius: 10rpx;
}

/* 作品标题 */
.card text {
  display: block;
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #3a2d1a; /* 温润深褐色 */
}

/* 隐藏滚动条（更美观） */
.content-right::-webkit-scrollbar {
  width: 0;
  height: 0;
}

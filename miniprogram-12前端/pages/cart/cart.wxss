.page {
  background: #faf8f5;
  min-height: 100%;
  padding-bottom: 80rpx;
}

.page-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 18rpx;
  color: #5a3b1a;
}

.empty-box {
  padding: 40rpx;
  text-align: center;
  color: #999;
}

.cart-card {
  display: flex;
  gap: 16rpx;
  background: #fff;
  padding: 18rpx;
  margin-bottom: 18rpx;
  border-radius: 12rpx;
  box-shadow: 0 6rpx 14rpx rgba(0,0,0,0.06);
}

.cart-img {
  width: 240rpx;
  height: 150rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

.cart-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cart-title {
  font-size: 30rpx;
  color: #3a2d1a;
  font-weight: 600;
}

.cart-meta {
  color: #8b7b6b;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.qty-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 12rpx;
}

.qty-btn {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #efe8df;
  color: #6b3f21;
}

.qty-text {
  font-size: 28rpx;
}

.delete-btn {
  margin-left: 18rpx;
  background: #e85050;
  color: #fff;
  padding: 10rpx 18rpx;
  border-radius: 10rpx;
}

.cart-bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 12rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  gap: 12rpx;
  background: rgba(255,255,255,0.95);
  padding: 12rpx;
  border-top: 1rpx solid #eee;
}

.clear-btn, .checkout-btn {
  padding: 14rpx 20rpx;
  border-radius: 12rpx;
}

.clear-btn {
  background: #f0f0f0;
  color: #666;
}

.checkout-btn {
  background: #8b4513;
  color: #fff;
}
